.b-weather-forecast
  display none

.b-weather-forecast__line
  border-bottom 1px dashed #cfcfcf
  padding 1px 5px 4px 5px
  width 400px
  font-weight 400

  :last-child
    border 0

.b-weather-forecast__section
  display inline-block

.b-weather-forecast__section__item
  border-right 1px dotted #b1b1b1

  :last-child
    border-right 0

.b-weather-forecast__section__date
  transform: rotate(90deg)

.b-weather-forecast__section__day
  font-size 1.5em
  padding-right 5px
  width 35px

.b-weather-forecast__temp_max
  font-size 1.3em
  color #ffd9bc

.b-weather-forecast__temp_min
  font-size 1em
  color #adbfff


.b-weather-forecast__main
  font-size 1.4em
  padding 0 5px
  width 60px