.b-weather-forecast
  display none
  padding-left 3em

  :last-child
    border-bottom 0

.b-weather-forecast__line
  border-bottom 1px dashed #cfcfcf
  padding 3px 5px 4px 6px
  width 500px
  font-weight 400



.b-weather-forecast__section
  display inline-block

  :last-child
    border-right 0

.b-weather-forecast__section__item
  border-right 1px dotted #b1b1b1
  display inline-block


.b-weather-forecast__section__date
  transform: rotate(90deg)

.b-weather-forecast__section__day
  font-size 1.5em
  padding-right 5px
  min-width 25px

.b-weather-forecast__temp
  padding 0 5px

.b-weather-forecast__temp_max
  font-size 1.3em
  color #ffd9bc

.b-weather-forecast__temp_min
  font-size 1em
  color #adbfff


.b-weather-forecast__main
  font-size 1.4em
  padding 0 5px
  width 60px

.b-weather-forecast__wind
  padding-left 1em