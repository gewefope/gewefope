

/*  b-page  (begin)  */
.b-page
  -moz-user-select -moz-none
  -khtml-user-select none
  -ms-user-select none
  -webkit-user-select none
  user-select none
  

.b-page__body
  text-align center
  padding-top 5%

.b-page__body_ask
  font-size 2.5em

  @media screen and (max-width: 760px)
    line-height 1.15

.b-page__body_msg
  padding-top 15px
  font-size 1.05em


/*  b-page  (end)  */

/*  b-header  (begin)  */
.b-header
  

/*  b-header  (end)  */

/*  b-logo  (begin)  */
//.b-logo
  
.b-logo__link
  border 0 none
  text-decoration none


.b-logo__name
  font 300 2.3em 'Open Sans', sans-serif
  padding 6px 0 0 6px
  display inline-block

.b-logo__slogan
  font 300 1.2em 'Open Sans', sans-serif
  padding 4px 0 0 10px
  display inline-block

/*  b-logo  (end)  */

/*  b-container  (begin)  */
.b-container
  //width 100%
  max-width 1500px
  margin 0 auto
  //box-sizing border-box


/*  b-container  (end)  */



/*  b-footer  (begin)  */
.b-footer
  position absolute
  bottom 0
  left 0
  width 100%
  box-sizing border-box

  @media screen and (max-width: 760px)
    position relative
    top 1.2em

.b-footer__table
  margin 0 auto
  max-width 1500px
  font-size .8em
  white-space normal

.b-footer__item
  line-height 1.5em
  padding-bottom 5px

.b-footer__table__col
  padding 0 10px 0 10px

.b-footer__table__col_right
  text-align right
  padding-right 10px

.b-footer__table__col_left
  text-align left
  min-width 50px

/*  b-footer  (end)  */


























